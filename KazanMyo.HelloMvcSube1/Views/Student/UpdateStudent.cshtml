@model Ogrenci
@{
    ViewData["Title"] = "UpdateStudent";
}

<h1>Öğrenci Güncelle</h1>

<form asp-action="UpdateStudent" asp-controller="Student" method="post">
    <input type="hidden" asp-for="Ogrenciid" />
    <div class=mb-3>
        <label asp-for="Ad" class="form-label"></label>
        <input type="text" asp-for="Ad" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="col-form-label">Soyadı:</label>
        <input type="text" asp-for="Soyad" class="form-control" />
    </div>
    <div class="mb-3">
        @Html.LabelFor(o=>o.Numara,new{@class="form-label"})
        @Html.TextBoxFor(o=>o.Numara,new{@class="form-control"})
    </div>
    <input type="submit" value="Kaydet" class="btn btn-primary" />
</form>